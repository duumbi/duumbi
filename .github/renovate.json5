{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:monorepos",
    ":disableDependencyDashboard"
  ],
  "enabledManagers": [
    "terraform"
  ],
  "schedule": [
    "every weekday"
  ],
  "includePaths": [
    "devops/iac/workspaces/io-auth0/**",
    "devops/iac/workspaces/io-infra/**"
  ],
  "groupName": "terraform",
  "labels": ["dependencies", "renovate"],
  "prHourlyLimit": 3,
  "minimumReleaseAge": "3 days",
  "timezone": "Europe/Budapest",

  "packageRules": [
    {
      "matchPackageNames": ["node", "npm"],
      "enabled": false
    },
    {
      "description": "Pin all Auth0 Terraform dependencies",
      "paths": [
        "devops/iac/workspaces/io-auth0/**"
      ],
      "updateTypes": ["minor", "patch", "pin"],
      "labels": ["dependencies", "renovate", "terraform", "iac", "auth0"]
    },
    {
      "description": "Pin all Infra Terraform dependencies",
      "paths": [
        "devops/iac/workspaces/io-infra/**"
      ],
      "updateTypes": ["minor", "patch", "pin"],
      "labels": ["dependencies", "renovate", "terraform", "iac"]
    }
  ]
}
