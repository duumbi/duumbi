{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableDependencyDashboard"
  ],
  "enabledManagers": [
    "*"
  ],
  "schedule": [
    "every weekday"
  ],
  "includePaths": [
    "devops/iac/workspaces/io-auth0/**",
    "devops/iac/workspaces/io-infra/**",
    "applications/site-web-application/**"
  ],
  "labels": ["dependencies", "renovate"],
  "prHourlyLimit": 3,
  "minimumReleaseAge": "3 days",
  "timezone": "Europe/Budapest",

  "packageRules": [
    {
      "description": "Pin all Site Web App dependencies",
      "groupName": "site-web-application",
      "paths": [
        "applications/site-web-application/**"
      ],
      "updateTypes": ["minor", "patch", "pin"],
      "labels": ["dependencies", "renovate", "npm"]
    },
    {
      "description": "Pin all Auth0 Terraform dependencies",
      "groupName": "io-auth",
      "paths": [
        "devops/iac/workspaces/io-auth0/**"
      ],
      "updateTypes": ["minor", "patch", "pin"],
      "labels": ["dependencies", "renovate", "terraform", "iac"]
    },
    {
      "description": "Pin all Infra Terraform dependencies",
      "groupName": "io-infra",
      "paths": [
        "devops/iac/workspaces/io-infra/**"
      ],
      "updateTypes": ["minor", "patch", "pin"],
      "labels": ["dependencies", "renovate", "terraform", "iac"]
    }
  ]
}
